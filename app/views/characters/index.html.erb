<h1>Wheel of Time Characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td>
      <%= link_to character.name, character %>
      <% unless character.aliases.empty? -%>
        (<%= character.aliases.join(', ') %>)
      <% end -%>
    </td>
    <td>
      [
      <%= link_to 'Edit', edit_character_path(character) %> |
      <%= link_to 'Destroy', character, :confirm => 'Are you sure?', :method => :delete %>
      ]
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Character', new_character_path %>
